<div class="text-center mtbo">
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="content">
  
  <div class="form-group text-center">
  <div class="row">
                  <label class="control-label col-md-2 col-md-offset-2 col-xs-4 col-xs-offset-0">TITLE</label>
                  <div class="col-md-6 col-xs-6">
                    <div class="inputer">
                      <div class="input-wrapper">
                       <%=f.text_field :title ,class: "form-control" %>
                      </div>
                    </div>
                  </div>
                </div>
                </div>
                <div class="form-group text-center">
                <div class="row example-row ">
              <div class="col-md-2 col-md-offset-2 col-xs-4 col-xs-offset-0">TEXT</div><!--.col-md-3-->
              <div class="col-md-6 col-xs-6">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%=f.text_area :body ,class: "bs-wysihtml5 form-control wysihtml5-editor" ,rows: "1"%> 
                  </div>
                </div>
              </div><!--.col-md-7-->
            </div>
            </div>
            <div class="form-group text-center">
                <div class="row">
                  <label class="control-label col-md-2 col-md-offset-2 col-xs-4 col-xs-offset-0">TAGS</label>
                  <div class="col-md-6 col-xs-6">
                    <div class="inputer">
                      <div class="input-wrapper">
                       <%=f.text_field :tag_list ,class: "form-control wide", id: "tags"%>
                      </div>
                    </div>
                  </div>
                </div>
                </div>
                <div class="form-group text-center">
                  <div class="row">
                    <label class="control-label col-md-2 col-md-offset-2 col-xs-4 col-xs-offset-0">IMAGE</label>
                    <div class=" col-md-6 col-xs-6">
                      <div class="fileinput fileinput-new" data-provides="fileinput">
  
                          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                      <div>
                         <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span> <%=f.file_field :photo %>
                         </span>
                         <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                     </div>
                        </div>
                    </div>
                  </div>
                </div>
     
 <%= f.submit "SUBMIT" ,class: "btn btn-indigo btn-ripple"%>
<% end %>
</div>
</div>
 




